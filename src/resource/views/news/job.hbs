
    <div class="mt-4">
        <div class="row">
            {{#each news}}
                <div class="col-sm-6 col-lg-4">
                    <div class="card card-course-item" >
                        <div class="card-body">
                            <a href="/news/job/{{this.slug}}">
                                <h5 class="card-title">{{this.name}}</h5>
                            </a>
                            <p class="card-text">{{this.description}}</p>
                            <a href="/news/job/{{this.slug}}" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
