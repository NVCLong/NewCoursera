<body>
<!-- Navbar top -->
<div class="navbar-top">
    <div class="title">
        <h1>Profile</h1>
    </div>

    <!-- Navbar -->

    <!-- End -->
</div>
<!-- End -->

<!-- Sidenav -->
<div class="sidenav">
    <div class="profile">
        <img src="https://imdezcode.files.wordpress.com/2020/02/imdezcode-logo.png" alt="" width="100" height="100">
        <div class="url">
            <a  href="#" data-toggle="modal" data-target="#avatar">Change avatar</a>
            <hr align="center">
        </div>

        <div class="name">
            {{user.username}}
        </div>
    </div>

    <div class="sidenav-url">
        <div class="url">
            <a href="/me/stored/courses" >Courses</a>
            <hr align="center">
        </div>
        <div class="url">
            <a href="/me/cv/{{this._id}}">Cv</a>
            <hr align="center">
        </div>
    </div>
</div>
<!-- End -->

<!--Modal-->
<div class="modal fade" id="avatar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Change avatar </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/me/avatar/{{user._id}}" enctype="multipart/form-data" id="imageForm">
                    <input type="file" name="avatar">
                    <input type="text" name="userId" value="{{user._id}}" hidden="hidden">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button  type="button" class="btn btn-danger" id="submitBtn" >Yes</button>
            </div>
        </div>
    </div>
</div>

<!-- Main -->
<div class="main">
    <h2 class="identity">IDENTITY</h2>
    <div class="card">
        <div class="card-body">
            <i class="fa fa-pen fa-xs edit"></i>
            <table>
                <tbody>
                <tr>
                    <td>Name</td>
                    <td>:</td>
                    <td>{{user.username}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td> :</td>
                    <td>{{user.email}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- End -->
</body>
<script>
    let submitBtn=document.getElementById('submitBtn')
    let imageForm=document.getElementById('imageForm')
    submitBtn.onclick=function () {
        imageForm.submit()
    }

</script>